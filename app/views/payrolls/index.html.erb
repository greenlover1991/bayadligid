<h1>Listing payrolls of <%= @company.name %></h1>

<table border="1">
  <tr>
    <th>Date start</th>
    <th>Date end</th>
   
    <th colspan="8"></th>
    
	
  </tr>

<% @payrolls.each do |payroll| %>
  <tr>
    <td><%= payroll.date_started %></td>
    <td><%= payroll.date_ended %></td>
   
    <td><%= link_to 'Edit', edit_company_payroll_path(@company, payroll) %></td>
    <td><%= link_to 'Destroy', [@company, payroll], confirm: 'Are you sure?', method: :delete %></td>
	<% if payroll.payroll_type == "Daily" %>
		<td> <%= link_to 'Daily Rate', daily_payroll_company_payroll_path(@company.id, payroll) %></td>
		<td> <%= link_to 'Daily Rate Details', daily_payroll_details_company_payroll_path(@company.id, payroll) %></td>
	<% else %>
		<td> <%= link_to 'Monthly Rate', monthly_payroll_company_payroll_path(@company.id, payroll) %></td>
		<td> <%= link_to 'Monthly Rate Details', monthly_payroll_details_company_payroll_path(@company.id, payroll) %></td>	
	<% end %>
		<td> <%= link_to 'Generate Payslips', two_by_two_company_payroll_path(@company.id, payroll) %></td>
    
  </tr>
<% end %>
</table>

<br />

<div class="extra">
	<%= link_to 'Back', '/' %>
</div>
