<h1>Listing payrolls of <%= @company.name %></h1>

<table>
  <tr>
    <th>Date start</th>
    <th>Date end</th>
   
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payrolls.each do |payroll| %>
  <tr>
    <td><%= payroll.date_started %></td>
    <td><%= payroll.date_ended %></td>
   
    <td><%= link_to 'Show', [payroll.company, payroll] %></td>
    <td><%= link_to 'Edit', edit_company_payroll_path(payroll.company, payroll) %></td>
    <td><%= link_to 'Destroy', [payroll.company, payroll], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

