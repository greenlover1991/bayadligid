<h1>Listing holidays</h1>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Holiday type</th>
    <th>Date of holiday</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @holidays.each do |holiday| %>
  <tr>
    <td class="<%= holiday.holiday_type %>"><%= holiday.name %></td>
    <td><%= holiday.holiday_type %></td>
    <td><%= holiday.date_of_holiday %></td>
    <td><%= link_to 'Show', holiday %></td>
    <td><%= link_to 'Edit', edit_holiday_path(holiday) %></td>
    <td><%= link_to 'Destroy', holiday, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Holiday', new_holiday_path %>
<%= link_to 'Reset Holidays', reset_holidays_path, confirm: 'Are you sure to reset holidays?', method: :get %>
